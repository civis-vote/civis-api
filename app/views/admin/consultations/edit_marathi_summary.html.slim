- navigation_add 'Consultations', admin_consultations_path
- navigation_add "#{@consultation&.title}", admin_consultation_path(@consultation)
- navigation_add "Edit Marathi Summary", edit_marathi_summary_admin_consultation_path(@consultation)
= render_navigation
- flash.each do |key, value|
  - if (key == "flash_info" || key == "flash_success_info")
    div class=("alert #{key}") = value
.admin-content-wrapper.page-builder-content-height
  .admin-filter-bg
    .admin-filter-parent
      .admin-filter-child.width-65
        .admin-filter-child-field
          .admin-index-title-bold Edit Marathi Summary
  .admin-index-title.mt-5
    | Marathi Summary
  .width-60.bg-white.mt-4
    .p-5
      .show-page-parent-details
        .show-page-input-detail
          = simple_form_for [:admin, @consultation], url: update_marathi_summary_admin_consultation_path(@consultation), method: :patch do |f|
            - if @marathi_summary.errors.any?
              #error_explanation
                h2 = "#{pluralize(@marathi_summary.errors.count, "error")} prohibited this page from being saved:"
                ul
                  - @marathi_summary.errors.full_messages.each do |message|
                    li = message
            = f.rich_text_area :marathi_summary
            .admin-update-button-position
              button class="btn square-btn-question" type="submit" Save Changes
